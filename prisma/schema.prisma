generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Image {
  id        Int      @id
  productid Int?
  path      String?  @db.VarChar(45)
  kind      String?  @db.VarChar(45)
  product   Product? @relation(fields: [productid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "id")

  @@index([productid], map: "id_idx")
  @@map("image")
}

model Product {
  id    Int     @id
  name  String? @db.VarChar(45)
  price Int?
  image Image[]

  @@map("product")
}

model HomeImage {
  id   Int    @id
  path String @db.VarChar(45)

  @@map("home_image")
}

model star {
  id         Int    @id
  productid  Int
  point      Float  @db.Float
  fromuserid String @db.VarChar(45)
  orderid    Int

  @@map("star")
}
