generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model HomeImage {
  id   Int    @id
  path String @db.VarChar(45)

    @@map("home_image")
}

model Image {
  id        Int     @id
  productid Int?
  path      String? @db.VarChar(45)
  kind      String? @db.VarChar(45)

  @@index([productid], map: "id_idx")
  @@map("image")
}

model Product {
  id     Int     @id
  name   String? @db.VarChar(45)
  price  Int?
  option String? @db.VarChar(45)

  @@map("product")
}

model star {
  id         Int    @id
  productid  Int
  point      Float  @db.Float
  fromuserid String @db.VarChar(45)
  orderid    Int

  @@map("star")
}
